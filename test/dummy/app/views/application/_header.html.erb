<div class="md:flex md:items-center md:justify-between p-6">
  <div class="flex-1 min-w-0">
    <h2 id="session_status" class="text-2xl font-bold leading-7 text-skin-base sm:text-3xl sm:truncate">
      <%= signed_in_session? ? current_session.email : t("layouts.header.inactive_session.status") %>
    </h2>
  </div>

  <div class="mt-4 flex md:mt-0 md:ml-4">
    <% if signed_in_session? %>
      <%= button_to t("layouts.header.active_session.button"), no_password.session_path(current_session.id), method: :delete, class: "ml-3 inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-skin-button-accented hover:bg-skin-button-accented-hover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-skin-accented" %>
    <% else %>
      <%= link_to t("layouts.header.inactive_session.button"), no_password.new_session_path, class: "ml-3 inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-skin-button-accented hover:bg-skin-button-accented-hover focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-skin-accented" %>
    <% end %>
  </div>
</div>


